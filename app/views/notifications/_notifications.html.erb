<% if current_user %>

  <div class="container">
    <%= turbo_stream_from "notifications_#{user.id}"%>
    <%= turbo_frame_tag "notifications_#{user.id}" do %>
      <% @notifications.each do |notification| %>
        <% if notification.to_notification.instance_of?(PhotoNotification) %>
          <%= render partial: notification,locals: {
            type:'like_photo',
            user: notification.to_notification.creator,
            photo: notification.to_notification.photo ,
            unread: notification.unread?
          }
          %>
        <%elsif notification.to_notification.instance_of?(LikeAlbumNotification)%>
          <%= render partial: notification,locals: {
            type:'like_album',
            user: notification.to_notification.creator,
            album: notification.to_notification.album ,
            unread: notification.unread?
          }
          %>
        <%end %>
      <%end %>
    <%end %>
  </div>
<%end %>