<div class="col-10 col-md-8 bg-body ">
  <div class="d-flex justify-content-between align-items-center  mt-4">
    <h4 class="text-center">Edit Photo</h4>
    <%= link_to "Back", :back, class:'btn btn-primary' %>
  </div>
  <hr>

  <!-- Form Edit Photo -->
  <%= form_with(model: @edit_photo, url:photo_path(@edit_photo),method: :put, html:{class:'row g-4'}) do |form|%>
    <div class="col-md-5 ">
      <%=form.label :title,"Title",class:'form-label fw-bold' %>
      <%=form.text_field :title, class:'form-control', placeholder: @edit_photo.title%>
      <div class="col-6 mb-5">
        <%= form.label :sharing_mode,"Sharing_mode",class:'form-label fw-bold' %>
        <%= form.select :sharing_mode, [[:Public,:public1],[:Private,:private1]],{selected: @edit_photo.sharing_mode},{class:'form-select'} %>
      </div>
    </div>
    <div class="col-md-6 ">
      <%= form.label :description,"Description", class:'form-label fw-bold' %>
      <%= form.text_area :description,class:'form-control', placeholder: @edit_photo.description %>
    </div>
    <div>
      <div class="col-6 col-md-3 mb-5 d-flex justify-content-center", style="height: 200px;width:200px">
        <%= form.file_field :image_url, class:'form-control  form__input d-none' %>
        <%= form.label :image_url, class:'form-label overflow-hidden' do%>
          <%= image_tag @edit_photo.image_url.url, style:"width:100%" %>
        <%end %>
      </div>

      <div class="col-3 d-flex justify-content-between">
        <%= form.submit "Save",class: 'btn btn-success',data: {turbo_confirm: "Save?"} %>
      </div>
    </div>
  <%end %>
  <%= button_to "Delete", photo_path(@edit_photo),form: {data: {turbo_confirm: "Are you sure?" }} , method: :delete,class:"btn btn-danger" %>





</div>
<div class="col-sm-2 ">

</div>

