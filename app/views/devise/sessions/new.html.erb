<div class="content mt-5 d-flex justify-content-center flex-column align-items-center">
  <h1 class="text-primary ">Fotobook Login</h1>
  <div class=" w-25 card bg-body-secondary p-5 ">
    <div class="d-flex justify-content-center ">
      <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
           alt="" style="
      width: 96px;
        height: 96px;
        margin: 0 auto 10px;
        display: block;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        border-radius: 50%;">
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-login mt-5"}) do |f| %>


      <div class="field form-floating mb-3">
        <%= f.email_field :email,class:'form-control',  autofocus: true, autocomplete: "email",placeholder:"Email"  %>
        <%= f.label :email, class:'form-label' %>
      </div>

      <div class="field form-floating mb-3">
        <%= f.password_field :password, class:'form-control',autocomplete: "current-password", placeholder:"Password" %>
        <%= f.label :password , class:"form-label"%><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check mb-3">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:'form-check-label' %>
        </div>
      <% end %>

      <div class="actions d-flex justify-content-center mb-3">
        <%= f.submit "Log in", class:'btn btn-primary px-5 py-2' %>
      </div>
      <hr class="my-4">
      <div class="d-flex justify-content-around mb-3">
        <a href="#"><i class="fa-brands fa-facebook fa-2xl"></i></a>
        <a href="#"><i class="fa-brands fa-google fa-2xl"></i></a>
        <a href="#"><i class="fa-brands fa-linkedin fa-2xl"></i></a>
      </div>

    <% end %>
    <div class="d-flex justify-content-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create your account", new_registration_path(resource_name) , class: 'text-decoration-none mt-3'%><br />
    <% end %>

</div>
