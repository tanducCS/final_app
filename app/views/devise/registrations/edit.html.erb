<div class="col-10 col-md-8 bg-body ">
  <div class="d-flex justify-content-between align-items-center  mt-4">
    <h2>Edit <%= resource_name.to_s.humanize + ' Profile' %> </h2>
    <%= link_to "Back", :back, class:'btn btn-primary' %>
  </div>
  <hr>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row justify-content-center">

      <div class="col-2"></div>
      <div class="col-4" data-controller="previewPhoto">
        <%= f.file_field :avatar_url, class:'form-control  form__input d-none'%>
        <%= f.label :avatar_url, class:'form-label overflow-hidden',id:'input__label',style: "width:200px;height:200px;" do%>
          <% if resource.avatar_url.url.nil? %>
            <%= image_tag "avatar.jpeg", style:"width:100%",id:'input__image' %>
          <%else %>
            <%= image_tag resource.avatar_url.url, style:"width:100%",id:'input__image' %>
          <%end %>
        <%end %>
      </div>
      <div class="w-100"></div>
      <div class="col-2"></div>
      <div class="col-4">
        <p class="text-primary">Basic information</p>
      </div>
      <div class="w-100 "></div>
      <%= f.label :first_name,"First name" ,class:'form-label fw-bold col-2 d-flex justify-content-end align-items-center' %>
      <div class="col-4">
        <%= f.text_field :first_name,class:'form-control',placeholder:'First Name'%>
      </div>
      <div class="w-100 mb-3"></div>

      <%= f.label :last_name,"Last name", class:'form-label fw-bold col-2 d-flex justify-content-end align-items-center' %>
      <div class="col-4">
        <%= f.text_field :last_name,class:'form-control',placeholder:'Last Name'%>
      </div>

      <div class="w-100 mb-3"></div>

      <%= f.label :email, "Email",class:'form-label fw-bold col-2 d-flex justify-content-end align-items-center' %>
      <div class="col-4">
        <%= f.text_field :email,class:'form-control',placeholder:'First Name'%>
      </div>

      <div class="w-100 mb-3"></div>


    </div>
    <div class="d-grid mb-3 col-1 offset-5">

    </div>

    <div class="row justify-content-center">
      <div class="col-2"></div>
      <div class="col-4">
        <p class="text-primary">Password</p>
      </div>
      <div class="w-100"></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.label :password, class:'col-2 form-label fw-bold d-flex justify-content-end' %>
      <div class="col-4 mb-3">
        <%= f.password_field :password, class:'form-control', autocomplete: "new-password", required: false %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="w-100"></div>
      <%= f.label :password_confirmation ,class:'form-label fw-bold col-2 d-flex justify-content-end'%><br />
      <div class="col-4 mb-3">
        <%= f.password_field :password_confirmation,class:'form-control' , autocomplete: "new-password", required: false %>
      </div>
      <div class="w-100"></div>
      <%= f.label :current_password,class:'form-label fw-bold col-2 d-flex justify-content-end' %>
      <div class="col-4 mb-3">
        <%= f.password_field :current_password, class:'form-control', autocomplete: "current-password", required: false %>
      </div>
      <div class="w-100"></div>
      <div class="col-2"></div>
      <div class="actions col-4 mb-3">
        <%= f.submit "Update" ,class:" btn btn-success"%>
      </div>
  <% end %>

    <div class="w-100"></div>
    <h3 class="col-6 offset-4">Cancel my account</h3>
    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    </div>

</div>

