
<div class="content mt-5 d-flex justify-content-center flex-column align-items-center">
  <h1 class="text-primary mb-3">Fotobook Sign up</h1>
  <div class="form-login w-25 card bg-body-secondary p-5 ">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'form-signup mt-5'}) do |f|  %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-floating mb-3">
        <%= f.email_field :email,class:'form-control', autofocus: true, autocomplete: "email", placeholder: "Email" %>
        <%= f.label :email,class:'form-label' %>
      </div>
      <div class="field form-floating mb-3">
        <%= f.text_field :first_name, class:'form-control', autofocus: true, autocomplete: "first_name", placeholder: "First Name"%>
        <%= f.label :first_name, class:'form-label'%>
      </div>
      <div class="field form-floating mb-3">
        <%= f.text_field :last_name, class:'form-control', autofocus: true, autocomplete: "last_name", placeholder: "Last Name"%>
        <%= f.label :last_name, class:'form-label'%>
      </div>
      <div class="field form-check-inline mb-3">
        <%= f.radio_button :gender, "male",class:"form-check-input" %>
        <%= f.label :gender, "Male",class:"form-check-label" %>
        <%= f.radio_button :gender, "female",class:"form-check-input" %>
        <%= f.label :gender, "Female",class:"form-check-label" %>
      </div>

      <div class="field form-floating mb-3">
        <%= f.password_field :password, class:'form-control',autocomplete: "current-password", placeholder:"Password"  %>
        <%= f.label :password, class:'form-label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "current-password",class:'form-control',placeholder:"Password" %>
        <%= f.label :password_confirmation,class:'form-label' %>

      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center">
    </div>
  </div>
      <%= render "devise/shared/links" %>
</div>


